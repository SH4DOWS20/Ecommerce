<h1>Here are your purchases</h1>

<% for(i = 0; i < cart.length; i++) { %>
  <div>
    <h1><%= cart[i].name %></h1>
    
   <%# update form %>
    <form action="/api/cart/update/<%= cart[i].id %>" method="GET">
			<input type="text" name="name" id="name" placeholder="<%= cart[i].name %>">      
			<button type="submit">Update</button>
    </form>

    <%# delete button %>
    <form action="/api/cart/delete/<%= cart[i].id %>" method="POST">
      <input type="hidden" name="_method" value="DELETE">
      <button type="submit">Delete</button>
    </form>
  </div>
  
<% } %>