<h1>Items In Your Cart</h1>

<% for(i=0; i  < Cart.length ; i++){ %>
<h1><%= Cart[i].name %></h1>

<form action="/api/Cart/update/<%= Cart[i].id %>" method="post">
    <input type="text" name="name" id="name" placeholder="<%= Cart[i].name %>">
    <button type="submit">Update</button>
</form>

<form action="/api/Cart/delete/<%= Cart[i].id %>" method="post">
    <input type="hidden" name="_method" value="DELETE">
    <button>Delete <%= Cart[i].name %></button>
</form>

<% } %>